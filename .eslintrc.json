{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": [
    "react",
    "jest"
  ],
  "globals": {
    "define": true
  },
  "extends": ["htmlacademy/es6", "plugin:react/recommended"],
  "rules": {
    "camelcase": [2, { "properties": "never" }],
    "quotes": [2, "single"]
  }
}
